@page "/notes/edit/{id:guid}"
@using Notely.Web.Services

<PageTitle>Edit Note - Notely</PageTitle>

<div class="note-editor">
    <div class="editor-header">
        <h1 class="editor-title">
            <i class="fas fa-edit"></i>
            Edit Note
        </h1>
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            Note editing will be enabled in Phase 2.
        </div>
    </div>

    <form>
        <div class="form-group">
            <label class="form-label" for="title">
                <i class="fas fa-heading"></i>
                Title
            </label>
            <input id="title" class="form-control" type="text" @bind="noteModel.Title" placeholder="Enter note title..." />
        </div>

        <div class="form-group">
            <label class="form-label" for="content">
                <i class="fas fa-align-left"></i>
                Content
            </label>
            <textarea id="content" class="form-control content-textarea" @bind="noteModel.Content" placeholder="Write your note content here..."></textarea>
        </div>

        <div class="editor-actions">
            <a href="/notes" class="btn-cancel">
                <i class="fas fa-times"></i>
                Cancel
            </a>
            <button type="button" class="btn-save" disabled>
                <i class="fas fa-save"></i>
                <span>Update Note (Coming in Phase 2)</span>
            </button>
        </div>
    </form>
</div>

@code {
    [Parameter] public Guid Id { get; set; }
    
    private EditNoteModel noteModel = new();

    protected override async Task OnInitializedAsync()
    {
        noteModel = new EditNoteModel
        {
            Id = Id,
            Title = "Sample Note Title",
            Content = "This is sample content for the note. Editing functionality will be available in Phase 2."
        };
    }

    public class EditNoteModel
    {
        public Guid Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Content { get; set; } = string.Empty;
    }
}

@inject NavigationManager NavigationManager