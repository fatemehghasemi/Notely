@using Shared.DTOs
@using Notely.Web.Services.AppServices
@inject ITagsAppService TagsService

<div class="single-tag-select-container">

    @if (!string.IsNullOrEmpty(SelectedTag))
    {
        <div class="selected-tag-display mb-2">
            <small class="text-muted d-block mb-1">Selected Tag:</small>
            <span class="badge bg-primary">
                <i class="fas fa-tag me-1"></i>
                @SelectedTag
                <button type="button" class="btn-close btn-close-white ms-1" 
                        style="font-size: 0.7rem;" 
                        @onclick="ClearSelection"
                        @onclick:stopPropagation="true"></button>
            </span>
        </div>
    }


    <div class="single-select-wrapper">
        @if (isLoading)
        {
            <div class="form-select disabled">
                <i class="fas fa-spinner fa-spin me-2"></i>
                Loading tags...
            </div>
        }
        else
        {
            <select class="form-select" 
                    @onchange="HandleSelectionChange"
                    value="@SelectedTag">
                <option value="">-- Select a tag --</option>
                @if (allTags?.Any() == true)
                {
                    @foreach (var tag in allTags)
                    {
                        <option value="@tag.Title">
                            @tag.Title
                        </option>
                    }
                }
                else
                {
                    <option disabled>No tags available</option>
                }
            </select>
        }
        <small class="form-text text-muted mt-1">
            <i class="fas fa-info-circle me-1"></i>
            Select one tag for this note
        </small>
    </div>
</div>

<style>
    .single-tag-select-container {
        width: 100%;
    }

    .selected-tag-display .badge {
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
        display: inline-flex;
        align-items: center;
    }

    .single-select-wrapper .form-select {
        cursor: pointer;
    }

    .single-select-wrapper .form-select:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .form-select.disabled {
        background-color: #e9ecef;
        border-color: #ced4da;
        color: #6c757d;
        cursor: not-allowed;
        padding: 0.75rem;
        display: flex;
        align-items: center;
    }
</style>

@code {
    [Parameter] public string SelectedTag { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> SelectedTagChanged { get; set; }

    private List<TagDto> allTags = new();
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTags();
    }

    private async Task LoadTags()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var result = await TagsService.GetAllTagsAsync();
            allTags = result?.ToList() ?? new List<TagDto>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading tags: {ex.Message}");
            allTags = new List<TagDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleSelectionChange(ChangeEventArgs e)
    {
        var selectedValue = e.Value?.ToString() ?? string.Empty;
        await SelectedTagChanged.InvokeAsync(selectedValue);
        StateHasChanged();
    }

    private async Task ClearSelection()
    {
        await SelectedTagChanged.InvokeAsync(string.Empty);
        StateHasChanged();
    }
}
