@page "/notes"
@using System.Text.Json
@using Shared.DTOs
@using Shared.Responses
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Notes Management</PageTitle>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-sticky-note me-2"></i>
                        Notes Management
                    </h4>
                    <button class="btn btn-light btn-sm" @onclick="NavigateToCreate">
                        <i class="fas fa-plus me-1"></i>
                        New Note
                    </button>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2 text-muted">Loading notes...</p>
                        </div>
                    }
                    else if (notes == null || !notes.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-sticky-note fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No notes found</h5>
                            <p class="text-muted">Create your first note to get started!</p>
                            <button class="btn btn-primary" @onclick="NavigateToCreate">
                                <i class="fas fa-plus me-1"></i>
                                Create First Note
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var note in notes)
                            {
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card h-100 shadow-sm border-0 note-card">
                                        <div class="card-body d-flex flex-column">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title text-primary fw-bold mb-0">
                                                    @(string.IsNullOrEmpty(note.Title) ? "Untitled" : note.Title)
                                                </h6>
                                            </div>
                                            <p class="card-text text-muted flex-grow-1">
                                                @(note.Content.Length > 100 ? note.Content.Substring(0, 100) + "..." : note.Content)
                                            </p>
                                            <div class="mt-auto">
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar-alt me-1"></i>
                                                    @note.CreatedAt.ToString("MMM dd, yyyy")
                                                </small>
                                                @if (note.UpdatedAt.HasValue)
                                                {
                                                    <small class="text-muted ms-2">
                                                        <i class="fas fa-edit me-1"></i>
                                                        Updated @note.UpdatedAt.Value.ToString("MMM dd")
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(message))
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert">
            <div class="toast-header @(isError ? "bg-danger" : "bg-success") text-white">
                <i class="fas @(isError ? "fa-exclamation-circle" : "fa-check-circle") me-2"></i>
                <strong class="me-auto">@(isError ? "Error" : "Success")</strong>
                <button type="button" class="btn-close btn-close-white" @onclick="ClearMessage"></button>
            </div>
            <div class="toast-body">
                @message
            </div>
        </div>
    </div>
}

<style>
    .note-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .note-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
    }
    
    .card-title {
        font-size: 1.1rem;
        line-height: 1.3;
    }
    
    .card-text {
        font-size: 0.9rem;
        line-height: 1.4;
    }
</style>

@code {
    private List<NoteDto>? notes;
    private bool isLoading = true;
    private string message = string.Empty;
    private bool isError = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadNotes();
    }

    private async Task LoadNotes()
    {
        isLoading = true;
        try
        {
            var baseUri = Navigation.BaseUri;
            var response = await Http.GetAsync($"{baseUri}api/notes");
            
            if (response.IsSuccessStatusCode)
            {
                var json = await response.Content.ReadAsStringAsync();
                var result = JsonSerializer.Deserialize<ApiResponse<GetAllNotesResponse>>(json, new JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                });
                
                notes = result?.Data?.Notes?.Select(n => new NoteDto
                {
                    Id = n.Id,
                    Title = n.Title,
                    Content = n.Content,
                    CreatedAt = n.CreatedAt,
                    UpdatedAt = n.UpdatedAt
                }).ToList() ?? new List<NoteDto>();
            }
            else
            {
                ShowMessage($"Failed to load notes: {response.StatusCode}", true);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"Error loading notes: {ex.Message}", true);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/notes/create");
    }

    private void ShowMessage(string msg, bool error = false)
    {
        message = msg;
        isError = error;
        StateHasChanged();
        
        // Auto-hide message after 5 seconds
        _ = Task.Delay(5000).ContinueWith(_ => ClearMessage());
    }

    private void ClearMessage()
    {
        message = string.Empty;
        StateHasChanged();
    }

    // Response models for API deserialization
    public class GetAllNotesResponse
    {
        public List<NoteItem> Notes { get; set; } = new();
    }

    public class NoteItem
    {
        public Guid Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Content { get; set; } = string.Empty;
        public bool IsPinned { get; set; }
        public Guid? CategoryId { get; set; }
        public string? CategoryName { get; set; }
        public List<string> Tags { get; set; } = new();
        public DateTime CreatedAt { get; set; }
        public DateTime UpdatedAt { get; set; }
    }
}