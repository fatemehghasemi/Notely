@page "/api-test"
@using System.Text.Json
@using System.Text
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>API Test</PageTitle>

<div class="container mt-4">
    <h1>API Test Page</h1>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Test Create Note API</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" @bind="testTitle" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content</label>
                        <textarea class="form-control" rows="3" @bind="testContent"></textarea>
                    </div>
                    <button class="btn btn-primary" @onclick="TestCreateNote" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Test Create Note
                    </button>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Test Get All Notes API</h3>
                </div>
                <div class="card-body">
                    <button class="btn btn-success" @onclick="TestGetAllNotes" disabled="@isLoading">
                        Test Get All Notes
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(result))
    {
        <div class="mt-4">
            <div class="card">
                <div class="card-header">
                    <h4>API Response</h4>
                </div>
                <div class="card-body">
                    <pre class="@(isError ? "text-danger" : "text-success")">@result</pre>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private string testTitle = "Test Note";
    private string testContent = "This is a test note content";
    private bool isLoading = false;
    private string result = string.Empty;
    private bool isError = false;

    private async Task TestCreateNote()
    {
        isLoading = true;
        result = string.Empty;
        
        try
        {
            var noteData = new { Title = testTitle, Content = testContent };
            var json = JsonSerializer.Serialize(noteData);
            var content = new StringContent(json, Encoding.UTF8, "application/json");
            
            var baseUri = Navigation.BaseUri;
            var response = await Http.PostAsync($"{baseUri}api/notes", content);
            var responseContent = await response.Content.ReadAsStringAsync();
            
            result = $"Status: {response.StatusCode}\nResponse: {responseContent}";
            isError = !response.IsSuccessStatusCode;
        }
        catch (Exception ex)
        {
            result = $"Error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task TestGetAllNotes()
    {
        isLoading = true;
        result = string.Empty;
        
        try
        {
            var baseUri = Navigation.BaseUri;
            var response = await Http.GetAsync($"{baseUri}api/notes");
            var responseContent = await response.Content.ReadAsStringAsync();
            
            result = $"Status: {response.StatusCode}\nResponse: {responseContent}";
            isError = !response.IsSuccessStatusCode;
        }
        catch (Exception ex)
        {
            result = $"Error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isLoading = false;
        }
    }
}