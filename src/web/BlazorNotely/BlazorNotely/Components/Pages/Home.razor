@page "/"
@using System.Text.Json
@using System.Text
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Notely - Home</PageTitle>

<div class="container mt-4">
    <h1>Notely - Note Management</h1>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Create New Note</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@newNote" OnValidSubmit="@CreateNote" FormName="CreateNoteForm">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <InputText id="title" class="form-control" @bind-Value="newNote.Title" />
                        </div>
                        <div class="mb-3">
                            <label for="content" class="form-label">Content</label>
                            <InputTextArea id="content" class="form-control" rows="5" @bind-Value="newNote.Content" />
                        </div>
                        <button type="submit" class="btn btn-primary" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            Create Note
                        </button>
                    </EditForm>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Recent Notes</h3>
                    <button class="btn btn-sm btn-outline-primary" @onclick="LoadNotes">Refresh</button>
                </div>
                <div class="card-body">
                    @if (notes == null)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (!notes.Any())
                    {
                        <p class="text-muted">No notes found.</p>
                    }
                    else
                    {
                        @foreach (var note in notes)
                        {
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h6 class="card-title">@note.Title</h6>
                                    <p class="card-text">@note.Content</p>
                                    <small class="text-muted">Created: @note.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @(isError ? "alert-danger" : "alert-success") mt-3" role="alert">
            @message
        </div>
    }
</div>

@code {
    [SupplyParameterFromForm]
    private CreateNoteModel newNote { get; set; } = default!;
    private List<NoteModel>? notes;
    private bool isLoading = false;
    private string message = string.Empty;
    private bool isError = false;

    protected override void OnInitialized()
    {
        newNote ??= new CreateNoteModel();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadNotes();
    }

    private async Task CreateNote()
    {
        isLoading = true;
        message = string.Empty;
        
        try
        {
            var json = JsonSerializer.Serialize(newNote);
            var content = new StringContent(json, Encoding.UTF8, "application/json");
            
            var baseUri = Navigation.BaseUri;
            var response = await Http.PostAsync($"{baseUri}api/notes", content);
            
            if (response.IsSuccessStatusCode)
            {
                message = "Note created successfully!";
                isError = false;
                newNote = new CreateNoteModel();
                await LoadNotes();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                message = $"Error creating note: {response.StatusCode}";
                isError = true;
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadNotes()
    {
        try
        {
            var baseUri = Navigation.BaseUri;
            var response = await Http.GetAsync($"{baseUri}api/notes");
            if (response.IsSuccessStatusCode)
            {
                var json = await response.Content.ReadAsStringAsync();
                var result = JsonSerializer.Deserialize<ApiResponse<GetAllNotesResponse>>(json, new JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                });
                
                notes = result?.Data?.Notes?.Select(n => new NoteModel
                {
                    Id = n.Id,
                    Title = n.Title,
                    Content = n.Content,
                    CreatedAt = n.CreatedAt,
                    UpdatedAt = n.UpdatedAt
                }).ToList() ?? new List<NoteModel>();
            }
        }
        catch (Exception ex)
        {
            message = $"Error loading notes: {ex.Message}";
            isError = true;
        }
    }

    public class CreateNoteModel
    {
        public string Title { get; set; } = string.Empty;
        public string Content { get; set; } = string.Empty;
    }

    public class NoteModel
    {
        public Guid Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Content { get; set; } = string.Empty;
        public DateTime CreatedAt { get; set; }
        public DateTime? UpdatedAt { get; set; }
    }

    public class ApiResponse<T>
    {
        public bool Success { get; set; }
        public string Message { get; set; } = string.Empty;
        public T? Data { get; set; }
    }

    public class GetAllNotesResponse
    {
        public List<NoteItem> Notes { get; set; } = new();
    }

    public class NoteItem
    {
        public Guid Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Content { get; set; } = string.Empty;
        public bool IsPinned { get; set; }
        public Guid? CategoryId { get; set; }
        public string? CategoryName { get; set; }
        public List<string> Tags { get; set; } = new();
        public DateTime CreatedAt { get; set; }
        public DateTime UpdatedAt { get; set; }
    }
}
