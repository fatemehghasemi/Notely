@page "/tags"
@using Shared.DTOs
@inject ITagsService TagsService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Tags</PageTitle>

<h1 class="tags-title">Tags</h1>

<div class="tags-toolbar">
    <button class="btn btn-primary" @onclick="CreateTag">
        <i class="fas fa-plus"></i> Create Tag
    </button>
</div>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (!tags.Any())
{
    <div class="alert alert-info">No tags found.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Created</th>
                    <th>Updated</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in tags.OrderBy(t => t.Title))
                {
                    <tr @key="tag.Id">
                        <td>@tag.Title</td>
                        <td>@tag.CreatedAt.ToString("MMM dd, yyyy")</td>
                        <td>@(tag.UpdatedAt?.ToString("MMM dd, yyyy") ?? "-")</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditTag(tag.Id)">
                                Edit
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTag(tag.Id)">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private readonly List<TagDto> tags = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadTags();
    }

    private async Task LoadTags()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await TagsService.GetTagsAsync();
            tags.Clear();
            tags.AddRange(result);
        }
        catch (Exception ex)
        {
            errorMessage = "Unable to load tags. Please try again.";
            Console.WriteLine($"Error loading tags: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CreateTag()
    {
        Navigation.NavigateTo("/tags/create");
    }

    private void EditTag(Guid id)
    {
        Navigation.NavigateTo($"/tags/edit/{id}");
    }

    private async Task DeleteTag(Guid id)
    {
        var shouldDelete = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this tag?");
        if (!shouldDelete)
        {
            return;
        }

        try
        {
            await TagsService.DeleteTagAsync(id);
            await LoadTags();
        }
        catch (Exception ex)
        {
            errorMessage = "Unable to delete tag. Make sure it is not used by any note.";
            Console.WriteLine($"Error deleting tag: {ex.Message}");
        }
    }
}
