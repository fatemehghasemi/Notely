@page "/categories/create"
@using Shared.DTOs
@inject ICategoriesService CategoriesService
@inject NavigationManager Navigation

<PageTitle>Create Category</PageTitle>

<h1>Create Category</h1>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="row">
    <div class="col-md-6">
        <EditForm Model="@createCategoryDto" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <InputText id="title" class="form-control" @bind-Value="createCategoryDto.Title" />
                <ValidationMessage For="@(() => createCategoryDto.Title)" />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary me-2" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    }
                    Save Category
                </button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">
                    Cancel
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private readonly CreateCategoryDto createCategoryDto = new();
    private bool isSubmitting;
    private string? errorMessage;

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        errorMessage = null;
        try
        {
            await CategoriesService.CreateCategoryAsync(createCategoryDto);
            Navigation.NavigateTo("/categories");
        }
        catch (Exception ex)
        {
            errorMessage = "Unable to create category. Please try a different title.";
            Console.WriteLine($"Error creating category: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/categories");
    }
}
